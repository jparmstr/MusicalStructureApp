<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Main Menu buttons style -->
    <style name="style_main_menu_buttons">
        <item name="android:padding">8dp</item>
    </style>

    <!-- Artist thumbnail: artist name -->
    <style name="style_artist_thumbnail_artist_name">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingStart">4dp</item>
    </style>

    <!-- Album thumbnail: album title -->
    <style name="style_album_thumbnail_title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingEnd">2dp</item>
    </style>

    <!-- Album thumbnail: artist name -->
    <style name="style_album_thumbnail_artist">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingEnd">2dp</item>
    </style>

    <!-- Album Details: album title -->
    <style name="style_album_details_album_title">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <!-- Album Details: artist name -->
    <style name="style_album_details_artist_name">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <!-- Album Details: year -->
    <style name="style_album_details_year">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">6dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <!-- Album Details: separator character / symbol -->
    <style name="style_album_details_separator_character">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/darkGray</item>
    </style>

    <!-- Album Details: song count -->
    <style name="style_album_details_song_count">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <!-- Album Details: track number -->
    <style name="style_album_details_track_number">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingRight">@dimen/item_album_thumbnail_padding</item>
    </style>

    <!-- Album Details: track length -->
    <style name="style_album_details_track_length">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingStart">2dp</item>
    </style>

    <!-- Album Details: medium text (song title) -->
    <style name="style_album_details_medium_text">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">2dp</item>
    </style>

    <!-- Now Playing: large text (song title) -->
    <style name="style_now_playing_large_text">
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">2dp</item>
    </style>

    <!-- Now Playing: medium black text (artist name) -->
    <style name="style_now_playing_medium_black_text">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">4dp</item>
    </style>

    <!-- Now Playing: medium gray text (album title) -->
    <style name="style_now_playing_medium_gray_text">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:padding">4dp</item>
    </style>

    <!-- Now Playing: transport control buttons -->
    <style name="style_now_playing_transport_control_buttons">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <!-- Now Playing: small text (track lengths) -->
    <style name="now_playing_small_text">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/darkGray</item>
    </style>

</resources>
