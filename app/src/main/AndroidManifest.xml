<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pete.musicalstructureapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/activity_main_label">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AlbumsActivity"
            android:label="@string/activity_albums_label" />
        <activity
            android:name=".ArtistsActivity"
            android:label="@string/activity_artists_label" />
        <activity
            android:name=".SongsActivity"
            android:label="@string/activity_songs_label" />
        <activity
            android:name=".AlbumDetailsActivity"
            android:label="@string/activity_album_detail_label" />
        <activity
            android:name=".NowPlayingActivity"
            android:label="@string/activity_now_playing_label" />
    </application>

</manifest>